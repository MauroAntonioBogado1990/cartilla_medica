<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="reporte_cartilla_template">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <!-- Header con logo -->
                        <div class="header" style="display: flex; justify-content: space-between; align-items: center; height: 100px; padding: 10px; background-color: white;">
                            <!-- Logo principal a la izquierda -->
                            <t t-if="docs.company_id">
                                <img t-att-src="image_data_uri(docs.company_id.logo)" style="max-width: 230px; max-height: 100%; margin-right: 10px;" alt="Logo izquierdo"/>
                            </t>
                            <t t-else="">
                                <p style="color: red;">No hay logo disponible</p>
                            </t>

                            <!-- Logo adicional a la derecha -->
                            <img src="reporte_cartilla,static/images/logo2.png" style="max-width: 230px; max-height: 100%; margin-left: 10px;" alt="Logo derecho"/>
                            
                        </div>
                        <!-- Div de regiones -->
                        <div class="header2" style="background-color:rgb(10, 58, 109); color: white; text-align: left; padding: 10px; font-size: 30px; font-weight: bold; border-radius: 10px; margin-bottom: 15px;">
                            <t t-esc="docs[0].state_id.name" />
                        </div>

                        <!-- Encabezado 'Clínicas y Sanatorios' -->
                        <div class="header3" style="background-color:rgb(43, 231, 184); color: white; text-align: left; padding: 10px; font-size: 28px; font-weight: bold; width: 50%;">
                            <p>Clínicas y Sanatorios</p>
                        </div>

                        <!-- Contenedor único para todos los contactos -->
                        <div style="font-size: 20px; column-count: 2; column-gap: 20px;">
                            <t t-foreach="docs" t-as="doc">
                                <div style="margin-bottom: 10px;">
                                    <strong style="font-size: 18px;"><t t-esc="doc.name"/></strong><br/>
                                    <span style="font-size: 16px;"> <t t-esc="doc.phone or 'No disponible'"/></span><br/>
                                    <span style="font-size: 16px;"> <t t-esc="doc.street or 'No disponible'"/></span>
                                </div>
                            </t>
                        </div>

                        <!-- Footer -->
                        <div class="footer" style="display: flex; justify-content: space-between; align-items: center; padding: 10px; background-color: white; border-top: 1px solid #ccc;">
                            <span style="font-size: 20px; color: blue; font-weight: bold; text-align: left;">
                                cristalsalud.ar
                            </span>
                            <span style="font-size: 14px; color: green; text-align: center;">
                                • Prestador sólo Plan Esmeralda. Los prestadores pueden ser modificados de la cartilla médica sin previo aviso.
                            </span>
                        </div>
                    </div>
                </t>
            </t>
        </template>



<template id="report_payment_group">
    <t t-call="web.html_container">
        <t t-call="reporte_cartilla.reporte_cartilla_template" />
    </t>
</template>

        <!-- QWeb Reports -->
        <report
            id="reporte_cartilla.partner_group_report_cartilla"
            model="res.partner"
            string="Cartilla Medica"
            report_type="qweb-pdf"
            name="reporte_cartilla.report_payment_group"
            file="reporte_cartilla.report_payment_group"
        />

        


</data>
</odoo>